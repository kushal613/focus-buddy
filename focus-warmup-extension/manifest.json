{
  "name": "Focus Warmup",
  "description": "Gently transition from distraction to deep work with micro-tasks.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Focus Warmup",
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*",
    "http://localhost:3131/*",
    "http://localhost:3132/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ]
}



